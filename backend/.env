# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production-to-random-string

# Database Configuration
# Using SQLite for development (no setup required)
# For production, use MySQL: mysql+pymysql://user:pass@localhost:3306/myweb_books
DATABASE_URL=sqlite:///myweb_books.db

# CORS - Frontend URL (update for production)
# Allowing multiple origins for flexibility
FRONTEND_URL=http://localhost:8080

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
